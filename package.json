{
  "name": "storybook-twig-component-library",
  "version": "1.0.0",
  "description": "storybook twig component library",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:css": "run-s scss postcss",
    "scss": "sass ./components/style.scss ./assets/css/style.css --load-path=./node_modules && npx tailwindcss -i ./assets/css/style.css -o ./assets/css/style.css",
    "postcss": "npx postcss ./assets/css/*.css --replace --no-map --use autoprefixer",
    "watch:scss": "onchange -k './components/**/*.scss' -- npm run build:css",
    "browsersync": "browser-sync start --config ./browsersync.config.js",
    "browser-sync": "npm run browsersync",
    "tw:build": "npx tailwindcss -i ./components/tailwind.scss -o ./assets/css/tailwind.css",
    "tw:watch": "npx tailwindcss -i ./components/tailwind.scss -o ./assets/css/tailwind.css --watch",
    "tw:config-export": "node ./scripts/tallwind-config-export.js",
    "sb:start": "storybook dev -p 6006",
    "sb:build": "storybook build",
    "build:icons": "gulp",
    "build:all": "run-s build:css tw:build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@storybook/addon-a11y": "^8.2.0",
    "@storybook/addon-docs": "^8.2.4",
    "@storybook/addon-essentials": "^8.4.5",
    "@storybook/addon-interactions": "^8.4.5",
    "@storybook/addon-links": "^8.2.0",
    "@storybook/blocks": "^8.4.5",
    "@storybook/cli": "^8.4.5",
    "@storybook/html": "^8.4.5",
    "@storybook/html-vite": "^8.4.5",
    "@storybook/test": "^8.4.5",
    "autoprefixer": "^10.4.18",
    "drupal-attribute": "^1.0.2",
    "drupal-twig-extensions": "^1.0.0-beta.5",
    "gulp": "^5.0.0",
    "gulp-cheerio": "^1.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "modularscale-sass": "^3.0.10",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.36",
    "postcss-cli": "^11.0.0",
    "sass": "^1.79.5",
    "storybook": "^8.4.5",
    "tailwindcss": "^3.4.1",
    "typi": "^3.2.0",
    "vite": "^5.0.8",
    "vite-plugin-static-copy": "^2.2.0",
    "vite-plugin-twig-drupal": "^1.4.2",
    "write-yaml-file": "^5.0.0"
  }
}
