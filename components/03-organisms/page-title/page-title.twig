{% if hero_image %}
  {% set attributes = attributes|default(create_attribute())
    .addClass(['u-bg-top', 'u-bg-cover'])
    .setAttribute('style','background-image:url('~hero_image~')') %}
{% endif %}

{% set bg_colour = bg_colour|default('u-bg-grey-blue') %}

{% include '@molecules/section/section.twig' with {
  heading_level: 1,
  classes: [
    not hero_image ? 'md:u-bg-[url(data:image/svg+xml;base64,)]':'',
    '[background-position-x:100%]',
    'u-bg-no-repeat',
    hero_image ? 'md:u-pt-6 lg:u-pt-12 xl:u-pt-[5rem]':'',
  ],
  content_wrapper_classes: [
    'u-gap-2',
    'md:u-gap-4',
    'u-pt-4',
    'u-pb-6',
    'md:u-pt-[4rem]',
    'md:u-pb-[4rem]',
    'lg:u-pt-[4rem]',
    hero_image ? 'lg:u-pb-[10rem]':'lg:u-pb-[4rem]',
    hero_image ? 'md:u-max-w-[33rem]':'lg:u-max-w-[40rem]',
    bg_colour == 'u-bg-grey-blue' ? 'u-text-white':'',
    hero_image ? 'u-bg-opacity-80':'',
    hero_image ? bg_colour:'',
  ],
  remove_content_wrapper_classes: [
    'u-gap-8',
    'u-pt-2',
    'u-pb-3',
    'md:u-pt-6',
    'lg:u-pt-8',
  ],
  heading_classes: ['u-leading-tight'],
  remove_heading_classes: ['u-leading-none'],
} %}

