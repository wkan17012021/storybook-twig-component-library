{% set content %}
  {% include '@molecules/cta/cta-with-image.twig' with left_cta|merge({
    alignment: 'left',
    content_wrapper_classes: ['2xl:u-pl-[calc((100vw-1200px)/2)]'],
  }) only %}

  {% include '@molecules/cta/cta-with-image.twig' with right_cta|merge({
    alignment: 'right',
    cta_classes: ['u-mt-7', 'xl:u-mt-0', 'xl:u-pt-12'],
    media_classes: ['u-h-[22rem]'],
    remove_media_classes: ['u-h-[25rem]'],
    content_wrapper_classes: ['2xl:u-pr-[calc((100vw-1200px)/2)]'],
  }) only %}
{% endset %}

{% include '@molecules/section/section.twig' with {
  classes: [
    "md:u-bg-[url(data:image/svg+xml;base64,)]",
    'md:u-bg-no-repeat',
    'md:u-bg-left-bottom',
    'md:u-pb-16',
  ],
  add_padding_classes: false,
  content_classes: [
    'u-flex',
    'u-flex-col',
    'xl:u-flex-row',
    'xl:u-items-start',
  ],
  remove_container_classes: ['2xl:u-w-[1200px]'],
} %}

