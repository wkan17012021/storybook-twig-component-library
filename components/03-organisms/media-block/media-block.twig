{% set wrapper_text_colour = (bg_colour == 'u-bg-grey-blue' or bg_colour == 'u-bg-dark-blue') ? 'u-text-white':'' %}
{% set media_position = media_position|default('right') %}

{% set classes = ['u-bg-no-repeat'] %}

{% if media_position == 'left' %}
  {% set classes = classes|merge([
    "md:u-bg-[url(data:image/svg+xml;base64,)]",
    '[background-position-x:100%]',
  ]) %}
{% else %}
  {% set classes = classes|merge([
    "md:u-bg-[url(data:image/svg+xml;base64,)]",
    '[background-position-x:-100px]',
  ]) %}
{% endif %}

{% include '@molecules/section/section.twig' with {
  indent_bg: true,
  indent_bg_side: media_position,
  indent_bg_2xl: true,
  sub_container_classes: [
    'md:u-gap-4',
    'md:u-pt-14',
    'xl:u-pt-36',
  ],
  remove_sub_container_classes: ['md:u-gap-8'],
  content_wrapper_classes: [
    'md:u-pt-0',
    'md:u-pb-16',
    'lg:u-pt-0',
    'xl:u-pb-[8.5rem]',
    'xxl:u-p-0',
  ],
  remove_content_wrapper_classes: ['lg:u-pt-8'],
  content_classes: [
    'u-text-sm',
    'md:u-text-xl',
    'u-font-semibold',
  ],
} %}
